---
- hosts: your_host
  become: true
  tasks:
    - name: Stop and disable PostgreSQL
      service:
        name: postgresql
        state: stopped
        enabled: no

    - name: Stop and disable Nginx
      service:
        name: nginx
        state: stopped
        enabled: no

    - name: Install Python 2
      package:
        name: python2
        state: present

    - name: Create symlink for Python
      file:
        src: /usr/bin/python2
        dest: /usr/bin/python
        state: link
        force: yes

    - name: Copy EPEL RPM to target host
      copy:
        src: /path/to/epel-release-latest-8.noarch.rpm
        dest: /tmp/epel-release-latest-8.noarch.rpm

    - name: Install EPEL repository
      yum:
        name: /tmp/epel-release-latest-8.noarch.rpm
        state: present
